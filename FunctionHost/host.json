{
  "version": "2.0",
  "extensionBundle": {
    "id": "Microsoft.Azure.Functions.ExtensionBundle",
    "version": "[1.*, 2.0.0)"
  },
  "customHandler": {
    "description": {
      "defaultExecutablePath": "app/StateChartsDotNet.WebHost",
      "workingDirectory": "",
      "arguments": [
        "--urls",
        "http://*:%FUNCTIONS_CUSTOMHANDLER_PORT%",
        "--SCDN_STORAGE_CONNECTION_STRING",
        "%SCDN_STORAGE_CONNECTION_STRING%",
        "--SCDN_HUB_NAME",
        "%SCDN_HUB_NAME%",
        "--SCDN_CALLBACK_URI",
        "%SCDN_CALLBACK_URI%"
      ]
    },
    "enableForwardingHttpRequest": true
  }
}
