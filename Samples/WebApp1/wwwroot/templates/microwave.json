{
  "debug": {
    "instructions": [
      {
        "action": "enterstate",
        "element": "*"
      },
      {
        "action": "exitstate",
        "element": "*"
      }
    ]
  },
  "input": {
    "cook_time": 5,
    "door_closed": true,
    "timer":  0
  },
  "statemachine": {
    "id": "test",
    "initialstate": "off",
    "states": [
      {
        "id": "off",
        "type": "atomic",
        "transitions": [
          {
            "message": "turn.on",
            "target": "on"
          }
        ]
      },
      {
        "id": "on",
        "type": "compound",
        "initialstate": "idle",
        "transitions": [
          {
            "message": "turn.off",
            "target": "off"
          },
          {
            "conditionexpression": "timer >= cook_time",
            "target": "done"
          }
        ],
        "states": [
          {
            "id": "idle",
            "type": "atomic",
            "transitions": [
              {
                "conditionexpression": "door_closed",
                "target": "cooking"
              },
              {
                "message": "door.close",
                "target": "cooking",
                "actions": [
                  {
                    "type": "assign`1",
                    "target": "door_closed",
                    "valueexpression": "true"
                  }
                ]
              }
            ]
          },
          {
            "id": "cooking",
            "type": "atomic",
            "transitions": [
              {
                "message": "door.open",
                "target": "idle",
                "actions": [
                  {
                    "type": "assign`1",
                    "target": "door_closed",
                    "valueexpression": "false"
                  }
                ]
              },
              {
                "message": "time",
                "actions": [
                  {
                    "type": "assign`1",
                    "target": "timer",
                    "valueexpression": "timer + 1"
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "id": "done",
        "type": "final"
      }
    ]
  }
}
